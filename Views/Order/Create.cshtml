@model List<Sashiel_ST10028058_PROG7311_ICETask2.Models.Product>

@{
    ViewData["Title"] = "Place an Order";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🛒 Select Products to Order</h2>

    <form asp-action="Place" method="post" class="border rounded p-4 shadow-sm bg-light">
        @foreach (var product in Model)
        {
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" name="selectedProductIds" value="@product.Id" id="product_@product.Id" />
                <label class="form-check-label fw-semibold" for="product_@product.Id">
                    @product.Name - $@product.Price
                </label>
            </div>
        }

        <button type="submit" class="btn btn-success mt-3 w-100">✅ Place Order</button>
    </form>
</div>
